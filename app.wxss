/**app.wxss**/

page, view, text, navigator, input, form, select, option, image, cover-view,
cover-image {
  box-sizing: border-box;
}

page {
  background: #fff;
  font-size: 26rpx;
}

image {
  display: block;
  width: 100%;
}

.mainColor {
  color: #00badb;
}
.mainBg {
  background: #00badb;
}
.placeholder {
  color: #ccc;
  font-size: 24rpx;
}

.icon {
  font-size: 28rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clearfix {
  zoom: 1;
}

.clearfix:after {
  width: 0;
  height: 0;
  display: block;
  content: "";
  clear: both;
  visibility: none;
}

.button {
  width: 680rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  background: #00badb;
  box-shadow: 0px 6rpx 10rpx 0px rgba(0, 175, 206, 0.23);
  border-radius: 40rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: block;
  text-align: center;
}
