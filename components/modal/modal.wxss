/* components/modal/modal.wxss */

.modal-wrap {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  range: 0;
  z-index: 9999;
}

.modal-inner {
  color: #010101;
  width: 520rpx;
  height: 431rpx;
  padding: 30rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  position: absolute;
  left: 50%;
  top:50%;
  margin-left: -260rpx;
  margin-top: -215rpx;
  text-align: center;
}
.modal-inner .icon{
  font-size: 140rpx;
  display: block;
  margin-bottom: 30rpx;
}

.button {
  width: 84%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  background: #00badb;
  box-shadow: 0px 6rpx 10rpx 0px rgba(0, 175, 206, 0.23);
  border-radius: 40rpx;
  margin: 0 auto;
  margin-top: 50rpx;
  display: block;
  text-align: center;
}
