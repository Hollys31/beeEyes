/* components/tabbar/tabbar.wxss */
.icon{
  font-size: 50rpx;
  display: block;
 
}
.tabbottom {
  width: 750rpx;
  height: 146rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}

.tabbottom .list {
  width: 100%;
  height: 125rpx;
  padding-top: 20rpx;
  margin-top: 22rpx;
  background: #fff;
  box-shadow: 0px -2rpx 4rpx 0px rgba(102, 102, 102, 0.06);
}

.tabbottom .list .item {
  width: 25%;
  line-height: 1.8em;
  text-align: center;
  float: left;
}

.tabbottom .item .img {
  width: 51rpx;
  height: 51rpx;
}

.tabbottom .scan {
  width: 168rpx;
  height: 167rpx;
  position: fixed;
  z-index: 1000;
  left: 50%;
  margin-left: -84rpx;
  bottom: 0;
}
