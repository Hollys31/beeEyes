/* pages/guide/guide.wxss */

page {
  background: #f9f9f9;
}

.contain {
  width: 682rpx;
  margin:  0 auto;
  padding: 40rpx 45rpx;
  background: #fff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(204, 204, 204, 0.23);
  border-radius: 20rpx;
  overflow: hidden;
}
.contain .text{
  height: 90rpx;
  display: none;
  line-height: 1.8em;
  color: #010101;
}
.contain .text.active{
  display: block;
}
.contain .text text{
  display: block;
  font-size: 24rpx;
  color: #4A4A4A;
}
.contain image{
  width: 532rpx;
  height: 341rpx;
  margin: 42rpx 30rpx;
  display: inline-block;
}
swiper{
  height: 1050rpx;
}
