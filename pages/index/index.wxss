/**index.wxss**/
page{
  background: #f9f9f9;
}
.banner {
  width: 750rpx;
  height: 417rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}

.modules {
  position: relative;
  width: 750rpx;
  background: #f9f9f9;
  padding: 44rpx 39rpx;
  margin-top: -50rpx;
  border-radius: 50rpx 50rpx 0px 0px;
}

.item{
  width: 293rpx;
  height: 293rpx;
  background: linear-gradient(135deg, rgba(244, 121, 50, 1) 0%, rgba(255, 172, 106, 1) 100%);
  border-radius: 117rpx 20rpx 20rpx 20rpx;
  float: left;
  margin: 20rpx 23rpx;
}
.item image{
  width: 205rpx;
  height: 157rpx;
  margin-top: 36rpx;
  margin-left: 75rpx;
}
.item:nth-child(2) {
  background: linear-gradient(225deg, rgba(0, 186, 219, 1) 0%, rgba(144, 235, 255, 1) 100%);
  border-radius: 20rpx 117rpx 20rpx 20rpx;
}
.item:nth-child(2) image{
  width: 156rpx;
  height: 175rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
}
.item:nth-child(3) {
  background: linear-gradient(45deg, rgba(11, 201, 118, 1) 0%, rgba(154, 247, 206, 1) 100%);
  border-radius: 20rpx 20rpx 20rpx 117rpx;
}
.item:nth-child(3) image{
  width: 168rpx;
  height: 154rpx;
   margin-left: 104rpx;
}
.item:nth-child(4) {
  background: linear-gradient(-45deg, rgba(254, 162, 59, 1) 0%, rgba(251, 219, 133, 1) 100%);
  border-radius: 20rpx 20rpx 117rpx 20rpx;
}
.item:nth-child(4) image{
  width: 158rpx;
  height: 143rpx;
  margin-top: 52rpx;
  margin-left: 23rpx;
}

.item  text {
  display: inline-block;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 50rpx;
  margin-top: 40rpx;
}
