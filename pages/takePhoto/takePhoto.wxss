/* pages/takePhoto/takePhoto.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 80%;
  position: relative;
}

.coverbg {
  width: 100%;
}

.flash {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
  z-index: 99;
}

.tips {
  width: 385rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 9rpx;
  text-align: center;
  position: absolute;
  left: 180rpx;
  bottom: 22%;
  z-index: 999;
  color: #fff;
}

.charge {
  height: 20%;
  padding: 4% 0;
}

.charge .item {
  font-size: 26rpx;
  float: left;
  width: 33.3333%;
  text-align: center;
  color: #999;
  line-height: 2.2em;
}

.charge .item .icon {
  display: block;
  font-size: 54rpx;
  margin-top: 70rpx;
}

.charge .item .icon.takephoto {
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  line-height: 180rpx;
  background: linear-gradient(270deg, rgba(0, 186, 219, 1) 0%, rgba(144, 235, 255, 1) 100%);
  border-radius: 50%;
  text-align: center;
  font-size: 90rpx;
  color: #fff;
  margin-top: 0;
}

.types {
  width: 710rpx;
  position: absolute;
  color: #999;
  left: 20rpx;
  bottom: 34rpx;
  z-index: 999;
  text-align: center;
}

.types .item {
  width: 25%;
  float: left;
}

.types .item .text {
  line-height: 2.4em;
}

.types .item.active {
  color: #00badb;
}

.types cover-image {
  width: 52rpx;
  height: 52rpx;
  margin: 0 auto;
}

.photo {
  width: 100%;
  height: 100%;
  background: #000;
}

.photo image {
  width: 100%;
  height: 80%;
}

.photo .actions {
  height: 20%;
}

.photo .actions>view {
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  position: relative;
}

.photo .actions text {
  color: #20e916;
  position: absolute;
  bottom: 40rpx;
}
