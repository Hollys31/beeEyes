/* pages/confusion/lecture.wxss */
@import '/pages/news/detail.wxss';
.video-wrap{
  position: relative;
}
.video-wrap::before{
  content: "";
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}
.video-wrap .icon{
  position: absolute;
  color: #fff;
  text-align: center;
  font-size: 60rpx;
  z-index: 999;
  background: rgba(0,0,0,0.8);
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  margin-top: -40rpx;
  margin-left: -40rpx;
}
.myVideo{
  width: 100%;
  margin-bottom: 30rpx;
}
.article{
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  margin-top: -30rpx;
  background: #fff;
  z-index: 100;
}
