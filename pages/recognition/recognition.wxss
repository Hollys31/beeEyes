/* pages/recognition/recognition.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #F9F9F9;
}

.img {
  width: 100%;
  max-height: 60%;
}

.data {
  width: 100%;
  position: relative;
  margin-top: -38rpx;
  border-radius: 50rpx 50rpx 0px 0px;
  background: #F9F9F9;
  text-align: center;
  padding-top: 150rpx;
  font-size: 30rpx;
}

.data .typeImg {
  width: 188rpx;
  height: 188rpx;
  background: linear-gradient(90deg, rgba(244, 121, 50, 1) 0%, rgba(255, 172, 106, 1) 100%);
  border-radius: 50%;
  border: 6rpx solid #fff;
  top: -60rpx;
  left: 280rpx;
  position: absolute;
}

.data .typeImg image {
  width: 205rpx;
  height: 157rpx;
  margin: 0 auto;
}
.data .typeImg2{
  background:linear-gradient(90deg,rgba(0,186,219,1) 0%,rgba(144,235,255,1) 100%);
}
.data .typeImg2 image {
  width: 156rpx;
  height: 175rpx;
}
.data .typeImg3 {
  background: linear-gradient(90deg, rgba(11, 201, 118, 1) 0%, rgba(154, 247, 206, 1) 100%);
}

.data .typeImg3 image {
  width: 168rpx;
  height: 154rpx;
}
.data .typeImg4 {
  background:linear-gradient(90deg,rgba(254,162,59,1) 0%,rgba(251,219,133,1) 100%);
}

.data .typeImg4 image {
  width: 158rpx;
  height: 143rpx;
}
.data .num {
  margin-top: 50rpx;
  font-size: 80rpx;
  color: #00badb;
  line-height: 1.6em;
}

.data .num text {
  display: block;
  color: #999;
  font-size: 34rpx;
}

.data .charge {
  width: 90%;
  margin: 50rpx auto;
}

.data .charge .button, .data .charge .more {
  width: 44%;
  float: left;
  margin: 0 3%;
}

.data .charge .more {
  display: block;
  color: #00badb;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(204, 204, 204, 0.23);
  border-radius: 40px;
}
